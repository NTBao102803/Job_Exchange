{
  "settings": {
    "analysis": {
      "filter": {
        "vn_lowercase": { "type": "lowercase" },
        "vn_ascii_folding": {
          "type": "asciifolding",
          "preserve_original": true
        }
      },
      "analyzer": {
        "vn_analyzer": {
          "tokenizer": "standard",
          "filter": ["vn_lowercase", "vn_ascii_folding"]
        }
      }
    }
  },
  "mappings": {
    "properties": {
      "id": { "type": "keyword" },
      "fullName": { "type": "text", "analyzer": "vn_analyzer" },
      "email": { "type": "keyword" },
      "skills": {
        "type": "text",
        "analyzer": "vn_analyzer",
        "fields": {
          "keyword": { "type": "keyword", "ignore_above": 256 }
        }
      },
      "experience": { "type": "text", "analyzer": "vn_analyzer" },
      "major": { "type": "text", "analyzer": "vn_analyzer" },
      "school": { "type": "text", "analyzer": "vn_analyzer" },
      "address": {
        "type": "text",
        "analyzer": "vn_analyzer",
        "fields": {
          "keyword": { "type": "keyword", "ignore_above": 256 }
        }
      },
      "careerGoal": { "type": "text", "analyzer": "vn_analyzer" },
      "embedding": {
        "type": "dense_vector",
        "dims": 768,
        "index": true,
        "similarity": "cosine"
      }
    }
  }
}